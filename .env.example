# Mydia Environment Configuration
# Copy this file to .env and fill in your values

# Application Secret (generate with: openssl rand -base64 48)
SECRET_KEY_BASE=your-secret-key-here-change-this-in-production

# Database Configuration
# SQLite database file path (default: /data/mydia.db in Docker, mydia_dev.db locally)
DATABASE_PATH=/data/mydia.db

# Server Configuration
PORT=4000
HOST=0.0.0.0
URL_SCHEME=https
URL_HOST=mydia.example.com

# OIDC Authentication
OIDC_ENABLED=true
OIDC_ISSUER=https://auth.example.com/realms/myrealm
OIDC_CLIENT_ID=mydia
OIDC_CLIENT_SECRET=your-oidc-client-secret

# Local Authentication (for development/testing without OIDC)
# Set to 'true' to enable username/password authentication
LOCAL_AUTH_ENABLED=false

# Media Library Paths (Docker volumes)
MOVIES_PATH=/media/movies
TV_PATH=/media/tv

# Download Client Configuration (optional, can also be set via web UI)
# QBITTORRENT_URL=http://qbittorrent:8080
# QBITTORRENT_USER=admin
# QBITTORRENT_PASS=adminpass

# Indexer Configuration (optional, can also be set via web UI)
# PROWLARR_URL=http://prowlarr:9696
# PROWLARR_API_KEY=your-prowlarr-api-key

# Logging
LOG_LEVEL=info

# Timezone (optional)
TZ=America/New_York

# Performance Tuning (optional)
# POOL_SIZE=5
# SQLITE_CACHE_SIZE=-64000  # in KB, negative means KB
# SQLITE_BUSY_TIMEOUT=5000  # in ms

# Oban Configuration (optional)
# OBAN_POLL_INTERVAL=1000  # in ms
